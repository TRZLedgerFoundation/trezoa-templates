{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2020", "dom"]
  },
  "include": ["trezoaanchor/scripts/**/*.ts", "trezoaanchor/migrations/**/*.ts"],
  "exclude": ["node_modules", "trezoaanchor/target", "src/**/*", ".next/**/*"]
}
