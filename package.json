{
  "name": "@trzledgerfoundation/templates",
  "version": "1.0.0",
  "description": "Trezoa Templates for create-trezoa-dapp",
  "main": "index.js",
  "scripts": {
    "clean": "tsx scripts/clean.ts",
    "create-image": "tsx scripts/create-image.ts",
    "generate": "tsx scripts/generate.ts && automd",
    "format": "prettier --write .",
    "lint": "tsx scripts/lint.ts && prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "update-deps": "pnpm -r update --latest",
    "validate": "tsx scripts/validate.ts"
  },
  "keywords": [],
  "author": "Trezoa Developers",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vercel/og": "^0.7.2",
    "automd": "^0.4.2",
    "prettier": "^3.6.2",
    "puppeteer": "^23.11.1",
    "sharp": "^0.33.5",
    "tsx": "^4.19.2"
  },
  "repokit": {
    "groups": [
      {
        "description": "Kit Templates (using @trezoa/kit)",
        "name": "Kit",
        "path": "kit"
      },
      {
        "description": "Gill Templates (based on @trezoa/kit)",
        "name": "Gill",
        "path": "gill"
      },
      {
        "description": "Trezoa Mobile Templates",
        "path": "mobile",
        "name": "Trezoa Mobile"
      },
      {
        "description": "Templates using @trezoa/web3.js (legacy)",
        "name": "Web3.js Templates",
        "path": "web3js"
      },
      {
        "description": "Templates maintained by the Trezoa community",
        "name": "Community Templates",
        "path": "community"
      }
    ]
  },
  "repository": {
    "name": "trzledgerfoundation/templates",
    "type": "git",
    "url": "https://github.com/trzledgerfoundation/templates"
  }
}
