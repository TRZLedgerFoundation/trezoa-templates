{
  "name": "nextjs-trezoaanchor",
  "description": "Next.js, Tailwind, @trezoa/react-hooks, TrezoaAnchor vault program",
  "keywords": [
    "trezoaanchor",
    "kit",
    "nextjs",
    "react",
    "trezoa-kit",
    "tailwind",
    "typescript"
  ],
  "create-trezoa-dapp": {
    "rename": {
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "app"
        ]
      }
    }
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "trezoaanchor-build": "cd trezoaanchor && trezoaanchor build",
    "trezoaanchor-test": "cd trezoaanchor && trezoaanchor test --skip-deploy",
    "build": "next build",
    "ci": "npm run build && npm run lint && npm run format:check",
    "codoma:js": "codoma run js",
    "dev": "next dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint",
    "setup": "npm run trezoaanchor-build && npm run codoma:js",
    "start": "next start"
  },
  "dependencies": {
    "@trezoa/client": "^1.2.0",
    "@trezoa/kit": "^5.1.0",
    "@trezoa/react-hooks": "^1.1.5",
    "next": "16.0.10",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@codoma/nodes-from-trezoaanchor": "^1.3.8",
    "@codoma/renderers-js": "^1.5.5",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "codoma": "^1.5.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
